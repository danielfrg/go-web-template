{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",

        "alwaysStrict": true,
        "sourceMap": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "stripInternal": true,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,

        "types": ["node"],
        "typeRoots": ["../node_modules/@types"]
    }
}
